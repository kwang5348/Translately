<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userinfo">

	<insert id="join" parameterType="com.ssafy.dto.MemberInfo">
		insert into ssafydb.memberinfo (id, pw, mname, address, phone)
		values (#{id}, #{pw}, #{mname}, #{address}, #{phone})
	</insert>
	
	<update id="modify" parameterType="com.ssafy.dto.MemberInfo">
		update ssafydb.memberinfo
		set pw = #{pw}, mname = #{mname}, address = #{address}, phone = #{phone}
		where id = #{id}
	</update>
	
	<select id="login" parameterType="com.ssafy.dto.MemberInfo" resultType="com.ssafy.dto.MemberInfo">
		SELECT * FROM ssafydb.memberinfo
		WHERE id = #{id}
		AND pw = #{pw}
	</select>

	<select id="detail" parameterType="string" resultType="com.ssafy.dto.MemberInfo">
		SELECT * FROM ssafydb.memberinfo
		WHERE id = #{id}
	</select>
	
	<select id="list" resultType="com.ssafy.dto.MemberInfo">
		select * from ssafydb.memberinfo
		
	</select>
	
	<delete id="delete" parameterType="com.ssafy.dto.MemberInfo">
		DELETE from ssafydb.memberInfo
		WHERE id =#{id}
	</delete>
</mapper>
